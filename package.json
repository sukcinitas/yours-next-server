{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "engines": {
    "node": "12.22.1",
    "npm": "7.11.2"
  },
  "scripts": {
    "lint": "./node_modules/.bin/eslint src/*.js",
    "start": "node ./src/server.js",
    "heroku-postbuild": "cd client && npm install --only=dev && npm install && npm run build",
    "client": "cd ../client && npm run start",
    "prod-client": "cd ../client && npm run build",
    "dev": "concurrently \"npm run start\" \"npm run client\"",
    "prod": "npm run prod-client && npm run start",
    "test-apis": "jest --detectOpenHandles --runInBand ./src/__tests__/apis",
    "test-unit": "jest --detectOpenHandles --runInBand ./src/__tests__/unit"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.21.1",
    "bcryptjs": "^2.4.3",
    "connect-mongo": "^3.2.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "googleapis": "^51.0.0",
    "mongodb": "^3.6.3",
    "mongoose": "^5.11.12",
    "node": "^14.15.2",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "socket.io": "^2.4.1"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "supertest": "^4.0.2"
  }
}
